<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/border_margin"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/small_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_program_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_font_size"
            tools:text="Program" />

        <TextView
            android:id="@+id/txtOptionDigit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/std_margin"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge" />
        <TextView
            android:id="@+id/tv_program_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_program_name"
            android:text="3 days training"
            android:textSize="@dimen/mid_font_size" />
        <TextView
            android:id="@+id/tv_program_weeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_program_days"
            android:layout_alignParentRight="true"
            android:text="3 weeks"
            android:textSize="@dimen/mid_font_size" />
    </RelativeLayout>




</LinearLayout>